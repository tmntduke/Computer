<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"   
   		android:layout_width="wrap_content"
   		android:layout_height="wrap_content"
     	android:background="#cccccc"
>
    
    	<ImageView 
			android:id="@+id/xian"
			android:src="@drawable/bg_item_on"
	 		android:layout_width="wrap_content"
   			android:layout_height="wrap_content"
			/>
  		<ImageView 
  			android:layout_toRightOf="@id/xian"
  			android:layout_marginTop="5dip"
   			android:layout_width="wrap_content"
   			android:layout_height="wrap_content"
   			android:id="@+id/main_listview_imageview"
  			/>  
  		<LinearLayout 
  			android:id="@+id/textarray"
  			android:layout_marginLeft="5dip"
  			android:layout_toRightOf="@id/main_listview_imageview"
   			android:layout_width="200dip"
   			android:layout_height="wrap_content"
  			android:orientation="vertical"
  			>
   			<TextView 
   			android:id="@+id/main_listview_textview01"
   			android:layout_width="wrap_content"
   			android:layout_height="wrap_content"
   			android:textSize="20dp"
   			android:textColor="#3e3e3e"
  			/>
    		<TextView 
   			android:id="@+id/main_listview_textview02"
   			android:layout_width="wrap_content"
   			android:layout_height="wrap_content"
   			android:textColor="#3e3e3e"
  			/>
  		</LinearLayout>
  		<ImageView
  		    android:layout_width="20dip"
   			android:layout_height="20dip" 
  			android:layout_marginLeft="2dip"
  			android:layout_toRightOf="@id/textarray"
  			android:layout_marginTop="13dip"
   			android:id="@+id/main_listview_imageview_pass"
   			android:src="@drawable/icon_item_arrow"
  			/>
  		<ImageView
  		    android:layout_width="wrap_content"
   			android:layout_height="wrap_content" 
  	 		android:layout_alignParentRight="true"
			android:id="@+id/xian2"
			android:src="@drawable/bg_item_on"
	/>

</RelativeLayout>