<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back" >
    
    
    <ImageView 
        android:layout_width="300dip"
		android:layout_height="480dip" 
		android:background="@drawable/bg_dlg"
		android:layout_centerHorizontal="true"/>
	<TextView 
		android:layout_marginTop="10dip"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:textColor="#000000"
		android:text="@string/xuan_ze_sui_ji_lian_xi_de_dan_yuan"
		android:textSize="20dip"
		/>
	<ListView 
		android:layout_centerHorizontal="true"
		android:layout_width="275dip"
		android:layout_marginTop="50dip"
		android:layout_height="395dip"
		android:id="@+id/random_list">
	    
	</ListView>
	<Button
		android:layout_below="@id/random_list"
		android:layout_width="80dip"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:id="@+id/random_getback"
		android:text="@string/random_qu_xiao"
		/>

</RelativeLayout>