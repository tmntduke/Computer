<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@drawable/back"
 	android:layout_width="fill_parent"
  	android:layout_height="fill_parent"
>
    
     <ImageView
  		android:id="@+id/blackbottom" 
   		android:layout_width="fill_parent"
  		android:layout_height="50dip"
  		android:src="@drawable/bg_base_header"
		android:layout_centerHorizontal="true"
  		/>
  	<ImageButton 
  		android:id="@+id/getback"
   		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:background="@drawable/xml_getback"
		android:layout_marginLeft="16dp"
  		/>
  	<TextView 
  		android:layout_marginTop="8dip"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:text="关于软件"
  		android:textSize="20dip"
  		android:layout_marginLeft="100dip"
  		/> 
  	<ImageView 
  		android:id="@+id/bg_about"
   		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:src="@drawable/bg_about"
  		android:layout_below="@id/getback"
		android:layout_centerInParent="true"
  		android:layout_marginTop="4dip"
  		/>
  	<TextView
  		android:layout_centerHorizontal="true"
  		android:layout_marginTop="370dip" 
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:text="指导老师：谭立兴"
  		android:background="#994948"
  		android:textSize="27dip"
  		/>
    <TextView 
    	android:layout_centerHorizontal="true"
    	android:layout_marginTop="405dip" 
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:text="客户端   周锦男"
    	android:background="#994948"
  		android:textSize="27dip"
  />
    
</RelativeLayout>
